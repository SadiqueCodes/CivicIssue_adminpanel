{
  "name": "@de/core",
  "version": "0.1.0",
  "description": "Core utilities, types, and constants for DE frontends",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run",
    "analyze": "tsup --metafile && echo 'Bundle analysis complete'",
    "clean": "rm -rf dist .turbo coverage"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "date-fns": "^3.3.0",
    "zod": "^3.22.0",
    "@tanstack/react-query": "^5.51.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
