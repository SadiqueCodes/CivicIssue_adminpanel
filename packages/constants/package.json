{
  "name": "@de/constants",
  "version": "0.1.0",
  "description": "Constants and configuration values for DE frontends",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "analyze": "tsup --metafile && echo 'Bundle analysis complete'",
    "clean": "rm -rf dist .turbo coverage"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "keywords": [
    "constants",
    "configuration",
    "de-frontend"
  ],
  "dependencies": {
    "@de/utils": "workspace:^"
  }
}