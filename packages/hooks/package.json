{
  "name": "@de/hooks",
  "version": "0.1.0",
  "description": "React hooks collection for DE frontends",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "analyze": "tsup --metafile && echo 'Bundle analysis complete'",
    "clean": "rm -rf dist .turbo coverage"
  },
  "dependencies": {
    "@de/core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "jsdom": "^26.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",  
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}